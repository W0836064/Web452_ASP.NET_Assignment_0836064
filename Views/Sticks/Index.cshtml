@model Megha_Stick.Models.StickGripViewModel

@{
    ViewData["Title"] = "Index";
}
<!-- Include Google Fonts link for Pixelify Sans -->
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Playfair+Display">


<!-- Inline CSS styles -->
<style>
    /* Define the font family for the entire page */
    body {
        font-family: 'Playfair Display', serif; /* Use 'serif' as the fallback font family */
    }

    /* Style the heading elements */
    h1, h2 {
        color: red; /* Text color */
        text-align: center;
    }

    /* Style the paragraphs */
    p {
        line-height: 1.6; /* Line height for better readability */
    }

    /* Style the address block */
    address {
        font-style: normal; /* Address should not be italic */
    }

    /* Style the list of team members */
    ul {
        list-style-type: disc; /* Use bullets for list items */
    }

    /* Define the background color for the entire page */
    body {
        background-color: #f0f0f0; /* Light gray background color */
    }

    .Stick-image {
        max-width: 100%; /* Ensure images don't exceed their container's width */
        display: block; /* Remove default inline styles on images */
        margin: 0 auto; /* Center images horizontally within their container */
        border: 1px solid #ccc; /* Add a border around images */
        padding: 10px; /* Add some spacing around images */
        /* Styles for the Sticks/Index page */
        /* Define specific styles for elements on this page */
        /* Style the table header */
        .table th

    {
        background-color: #333; /* Dark background color for table headers */
        color: white; /* Text color for table headers */
        text-align: center; /* Center-align table header text */
    }

    /* Style the table rows */
    .table tbody tr:nth-child(even) {
        background-color: #f2f2f2; /* Alternate background color for even rows */
    }

    /* Style the links for Edit, Details, and Delete actions */
    a {
        color: #007bff; /* Link color */
        text-decoration: none; /* Remove underline from links */
        margin-right: 10px; /* Add spacing between links */
    }

        a:hover {
            text-decoration: underline; /* Underline links on hover */
        }
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Sticks" asp-action="Index" method="get">
    <p>


        <div class="form-group">
            <label asp-for="SelectedGripType">Grip Type:</label>
            <select asp-for="SelectedGripType" asp-items="Model.GripTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="SearchString">Search:</label>
            <input type="text" asp-for="SearchString" class="form-control" />
        </div>


        <input type="submit" value="Filter" class="btn-primary" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].ManufactureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].GripType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticks[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Sticks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufactureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GripType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
