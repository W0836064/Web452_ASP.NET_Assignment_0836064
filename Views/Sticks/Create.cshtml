@model Megha_Stick.Models.Stick

@{
    ViewData["Title"] = "Create";
}
<!-- Include Google Fonts link for Pixelify Sans -->
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Playfair+Display">


<!-- Inline CSS styles -->
<style>
    /* Define the font family for the entire page */
    body {
        font-family: 'Playfair Display', serif; /* Use 'serif' as the fallback font family */
    }

    /* Style the heading elements */
    h1, h2 {
        color: red; /* Text color */
        text-align: center;
    }

    /* Style the paragraphs */
    p {
        line-height: 1.6; /* Line height for better readability */
    }

    /* Style the address block */
    address {
        font-style: normal; /* Address should not be italic */
    }

    /* Style the list of team members */
    ul {
        list-style-type: disc; /* Use bullets for list items */
    }

    /* Define the background color for the entire page */
    body {
        background-color: #f0f0f0; /* Light gray background color */
    }

    .Stick-image {
        max-width: 100%; /* Ensure images don't exceed their container's width */
        display: block; /* Remove default inline styles on images */
        margin: 0 auto; /* Center images horizontally within their container */
        border: 1px solid #ccc; /* Add a border around images */
        padding: 10px; /* Add some spacing around images */
        /* Styles for the Sticks/Index page */
        /* Define specific styles for elements on this page */
        /* Style the table header */
        .table th

    {
        background-color: #333; /* Dark background color for table headers */
        color: white; /* Text color for table headers */
        text-align: center; /* Center-align table header text */
    }

    /* Style the table rows */
    .table tbody tr:nth-child(even) {
        background-color: #f2f2f2; /* Alternate background color for even rows */
    }

    /* Style the links for Edit, Details, and Delete actions */
    a {
        color: #007bff; /* Link color */
        text-decoration: none; /* Remove underline from links */
        margin-right: 10px; /* Add spacing between links */
    }

        a:hover {
            text-decoration: underline; /* Underline links on hover */
        }
    }
</style>

<h1>Create</h1>

<h4>Stick</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufactureDate" class="control-label"></label>
                <input asp-for="ManufactureDate" class="form-control" />
                <span asp-validation-for="ManufactureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label"></label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GripType" class="control-label"></label>
                <input asp-for="GripType" class="form-control" />
                <span asp-validation-for="GripType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" asp-items="Html.GetEnumSelectList<CustomRatingScale>()" class="form-control">
                    <option value="">Nominatee Rating </option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
